rule samtools_process:
    input:
        sam = "{prefix}/{sample}/{ref_id}/{sample}.sam"
    output:
        out1 = "{prefix}/{sample}/{ref_id}/{sample}_ordered.bam"
    log:
        "{prefix}/{sample}/logs/{sample}_{ref_id}_samtools_process.log"
    params:
        samtools_sort_options=config["samtools_process"]["OPTIONS"]
    shell:
        """
        docker_wrapper -c "samtools view -b -o {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}.bam {input.sam}" &&
        docker_wrapper -c "samtools view -b -f 4 {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}.bam -o {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}_unmapped.bam" &&
        docker_wrapper -c "samtools sort -n -o {output.out1}  {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}_unmapped.bam " 2>&1 | tee -a {log} &&
        rm  {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}.bam &&
        rm  {wildcards.prefix}/{wildcards.sample}/{wildcards.ref}/{wildcards.sample}_unmapped.bam
        """